@page
@model TorneoFutbol.App.Frontend.Pages.Arbitros.ListModel
@{
}
<h1>Lista de Arbitros</h1>
<a class="btn btn-primary" asp-page="./Create">Crear</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Documento</th>
            <th scope="col">Telefono</th>
            <th scope="col">Colegio</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var arbitro in Model.arbitros)
        {
            <tr>
                <th>@arbitro.Nombre</th>
                <td>@arbitro.Documento</td>
                <td>@arbitro.NumeroTelefono</td>
                <td>@arbitro.Colegio</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@arbitro.ID">Detalles</a>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@arbitro.ID">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
