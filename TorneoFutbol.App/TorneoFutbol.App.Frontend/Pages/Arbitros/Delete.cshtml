@page
@model TorneoFutbol.App.Frontend.Pages.Arbitros.DeleteModel
@{
}
<h1>Eliminar arbitro</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="arbitro.ID"></label>
        <input asp-for="arbitro.ID" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="arbitro.Nombre"></label>
        <input asp-for="arbitro.Nombre" class="form-control" readonly>
        <span asp-validation-for="arbitro.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="arbitro.Documento"></label>
        <input asp-for="arbitro.Documento" class="form-control" readonly>
        <span asp-validation-for="arbitro.Documento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="arbitro.NumeroTelefono"></label>
        <input asp-for="arbitro.NumeroTelefono" class="form-control" readonly>
        <span asp-validation-for="arbitro.NumeroTelefono" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="arbitro.Colegio"></label>
        <input asp-for="arbitro.Colegio" class="form-control" readonly>
        <span asp-validation-for="arbitro.Colegio" class="text-danger"></span>
    </div>
    <div class="row">
    <div class="col">
        <button type="submit" class="btn btn-danger">Eliminar Arbitro</button>
        <a class="btn btn-secondary" asp-page="./List">Volver</a>
    </div>
</div>
</form>

