@page
@model TorneoFutbol.App.Frontend.Pages.Equipos.DetailsEquiposModel
@{
}
h1>Detalles de los Equipos</h1>
<table class="table table-dark">
    <tr>
        <th scope="col">Nombre</th>
        <td>@Model.equipo.Nombre</td>
    </tr>
    <tr>
        <th scope="col">Municipio</th>
        @if (Model.equipo.Municipio == null)
        {
            <td><a class="btn btn-primary" asp-page="./AddMunicipio" asp-route-id="@Model.equipo.ID">Asignar Municipio</a></td>
        }
        else
        {
            <td>@Model.equipo.Municipio.Nombre</td>
        }
    </tr>
    <tr>
        <th scope="col">Desempeño</th>
        <td>@Model.equipo.Desempeno</td>
    </tr>
</table>
<a class="btn btn-primary" asp-page="./ListEquipos">Volver</a>
