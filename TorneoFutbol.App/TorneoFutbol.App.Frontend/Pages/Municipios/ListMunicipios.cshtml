@page
@model TorneoFutbol.App.Frontend.Pages.Municipios.ListMunicipiosModel
@{
}
<h1>Lista de Municipios</h1>
<table class="table" style="text-align: center;">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Departamento</th>
            <th scope="col">Estadio</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var municipio in Model.municipios)
        {
            <tr>
                <th>@municipio.Nombre</th>
                <td>@municipio.Departamento</td>
                <td>@municipio.Estadio.Nombre</td>
                <td>
                    <a class="btn btn-primary" asp-page="./DetailsMunicipios" asp-route-id="@municipio.ID">Detalles</a>
                    <a class="btn btn-secondary" asp-page="./EditMunicipios" asp-route-id="@municipio.ID">Editar</a>
                    <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@municipio.ID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<form method="get">
<div class="row">
    <div class="col" style="text-align:left">
        <a class="btn btn-primary" asp-page="./CreateMunicipios">Registrar Nuevo</a>
    </div>
    <div class="col">
        <select name="col" id="col" class="form-control">
            <option value=""> </option>
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.Departamento">@municipio.Departamento</option>
            }
        </select>
    </div>
    <div class="col">
        <button type="submit" class="btn btn-secondary">Filtrar</button>
    </div>
    <div class="col">
    </div>
</div>
</form>
