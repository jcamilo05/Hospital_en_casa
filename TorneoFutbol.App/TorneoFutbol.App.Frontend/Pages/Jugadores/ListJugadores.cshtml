@page
@model TorneoFutbol.App.Frontend.Pages.Jugadores.ListJugadoresModel
@{
}
<h1>Lista de Jugadores</h1>
<a class="btn btn-primary" asp-page="./CreateJugadores">Crear</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Documento</th>
            <th scope="col">Telefono</th>
            <th scope="col">Numero</th>
            <th scope="col">Posicion</th>
            <th scope="col">Equipo</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jugador in Model.jugadores)
        {
            <tr>
                <th>@jugador.Nombre</th>
                <td>@jugador.Documento</td>
                <td>@jugador.NumeroTelefono</td>
                <td>@jugador.Numero</td>
                <td>@jugador.Posicion</td>
                <td>@jugador.Equipo</td>
                <td><a class="btn btn-primary" asp-page="./DetailsJugadores" asp-route-id="@jugador.ID">Detalles</a></td>
            </tr>
        }
    </tbody>
</table>

